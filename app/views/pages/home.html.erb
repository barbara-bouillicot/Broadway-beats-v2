
<div class="login-btns d-flex flex-column justify-content-center align-items-center mt-3">
  <% if user_signed_in? %>
     <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item", class:"btn btn-app homepage" %>
  <% else %>
    <%= link_to "Sign up with Spotify",  user_spotify_omniauth_authorize_path(show_dialog: true), class:"btn btn-app homepage" , data: { 'turbo-method' => :post } %>
  <% end %>
</div>

<video autoplay muted id="background-video">
  <source src="https://files.catbox.moe/840tm0.mp4" type="video/mp4">
</video>
